              </div>
          
              <div class="cart_list_wrap">
                <div class="cart_responsive">
          
                  <%const array = cart;%>

                  <%const result = [...array.reduce((r, e) => {%>
                    <%let k = `${e._id}`;%>
                    <%if(!r.has(k)){%>
                       <%r.set(k, {...e, count: 1})%>
                        <%}else{ r.get(k).count++}%>
                    <%return r;%>
                  <%}, new Map).values()]%>
                  
                  <%if(result.length > 0){%>

                  <%for(i = 0; i < result.length; i++){%>

