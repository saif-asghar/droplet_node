<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
        <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
        <!-- <link rel="stylesheet" href="css/style.css"> -->
        <link rel="stylesheet" href="css/guests/style3.css">
        <link rel="shortcut icon" href="pics/favicon-32x32.png" type="image/x-icon">
        <title>Droplet</title>
    </head>
    <body style="overflow: hidden;" class="login-body">
        <div style="background-color: white; height: 100vw;">
            <div style="margin-left: 50px;" class="logo-container">
                <div class="specialdiv">
                    <li>
                        <div class="logo-holder logo-4">
                            <a href="">
                                <img src="./pics/logoCorrect.jpg" alt="LOGO">
                            </a>
                        </div>
                    </li>
                </div>
            </div>


            <div>
                <ul class="nav nav-tabs justify-content-center">
                    <li class="nav-item">
                      <a id="buyerBtn" class="nav-link active" aria-current="page" href="#">Buyer</a>
                    </li>
                    <li class="nav-item">
                      <a id="sellerBtn" class="nav-link" href="#">Seller</a>
                    </li>
                  </ul>
            </div>

            
            <div id="contBuyer" class="cont">
                <form action="/login-buyer" method="post">
                    <div class="form sign-in">
                        <h2>Welcome back, Customer</h2>
                        <label>
                            <span>Email</span>
                            <input required name="loginEmail" type="email">
                        </label>
                        <label>
                            <span>Password</span>
                            <input name="loginPass" required type="password">
                        </label>
                        <p class="forgot-pass">Forgot password?</p>
                        <button type="submit" class="submit">Sign In</button>
                    </div>
                </form>
                <div class="sub-cont">
                    <div class="img">
                        <div class="img__text m--up">
                            <h2>New here?</h2>
                            <p>Sign up and discover great amount of new offers on flight!</p>
                        </div>
                        <div class="img__text m--in">
                            <h2>One of us?</h2>
                            <p>If you already have an account, just sign in. We've missed you!</p>
                        </div>
                        <div class="img__btn">
                            <span class="m--up">Sign Up</span>
                            <span class="m--in">Sign In</span>
                        </div>
                    </div>
                    <form action="/signup-buyer" method="post">
                        <div class="form sign-up">
                            <h2>Time to feel like home,</h2>
                            <label>
                                <span>First Name</span>
                                <input name="signupfName" required type="text">
                            </label>
                            <label>
                                <span>Last Name</span>
                                <input name="signuplName" required type="text">
                            </label>
                            <label>
                                <span>Email</span>
                                <input name="signupEmail" required type="email">
                            </label>
                            <label>
                                <span>Password</span>
                                <input name="signupPass" required type="password">
                            </label>
                            <button type="submit" class="submit">Sign Up</button>
                        </div>
                    </form>
                </div>
            </div>

            
            <div id="contSeller" style="display: none;" class="cont">
                <form action="/login-seller" method="post">
                    <div class="form sign-in">
                        <h2>Welcome back, Seller</h2>
                        <label>
                            <span>Email</span>
                            <input name="loginEmail" type="email">
                        </label>
                        <label>
                            <span>Password</span>
                            <input name="loginPass" type="password">
                        </label>
                        <p class="forgot-pass">Forgot password?</p>
                        <button type="submit" class="submit">Sign In</button>
                    </div>
                </form>
                <div class="sub-cont">
                    <div class="img">
                        <div class="img__text m--up">
                            <h2>New here?</h2>
                            <p>Sign up and discover great amount of new offers on flight!</p>
                        </div>
                        <div class="img__text m--in">
                            <h2>One of us?</h2>
                            <p>If you already have an account, just sign in. We've missed you!</p>
                        </div>
                        <div class="img__btn">
                            <span class="m--up">Sign Up</span>
                            <span class="m--in">Sign In</span>
                        </div>
                    </div>
                    <form action="/signup-seller" method="post">
                        <div class="form sign-up">
                            <h2>Time to feel like home,</h2>
                            <label>
                                <span>First Name</span>
                                <input name="signupfName" type="text">
                            </label>
                            <label>
                                <span>Last Name</span>
                                <input name="signuplName" type="text">
                            </label>
                            <label>
                                <span>Email</span>
                                <input name="signupEmail" type="email">
                            </label>
                            <label>
                                <span>Password</span>
                                <input name="signupPass" type="password">
                            </label>
                            <button type="submit" class="submit">Sign Up</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <script src="js/guests/login.js"></script>
    </body>
</html>
