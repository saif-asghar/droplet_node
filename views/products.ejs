            <!--PRODUCT CARDS-->
            <div class="container py-5">
                <div class="row">

                    <%if(foundItemsNew.length > 0){%>
                        <%for (const product of Object.entries(foundItemsNew)){%>
                            <form class="col-lg-3" action="/product-details" method="post">
                        <!-- Product Card -->
                        <div id="productCard">
                            <div class="product_card">
                              <div class="card border-0">
                                <div class="card-header bg-transparent border-0 p-0">
                                <img class="card-img-top" style="border-radius: 5px; max-height: 306px;" src="<%= product[1].thumbnail %>" alt="">
                                <div class="card-overlay">
                                    <div class="btn-group" role="group" aria-label="Basic example">
                                    <button type="button" class="btn btn-secondary"><i class="fa fa-heart"></i></button>
                                    <button type="submit" class="btn btn-light"><i class="fa fa-shopping-cart"></i> Add to cart</button>
                                    </div>
                                </div>
                                <!-- <div class="details-btn">
                                    <a href="#" class="btn btn-dark">View Details</a>
                                </div> -->
                                </div>
                                <div class="card-body">
                                <small>
                                    <a class="text-muted"><%= product[1].brand %></a>
                                </small>
                                <strong>
                                    <button style="text-transform: capitalize;" class="text-body"><%= product[1].title %></button>
                                </strong>
                                <div class="price">
                                    <!-- <span class="text-decoration-line-through">৳ 870</span> -->
                                    <span class="text-warning">
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star-half-o"></i>
                                    </span>
                                </div>
                                <div class="price">
                                    <!-- <span class="text-decoration-line-through">৳ 870</span> -->
                                    <span class="text-warning">$<%= product[1].price %></span>
                                </div>
                                </div>
                            </div>
                            </div>
                        </div>
                        <div style="display: none;">
                            <input type="text" name="productID" value="<%= product[1]._id %>">
                            <input type="text" name="productCategory" value="<%= product[1].category %>">
                        </div>
                        <!-- /Product Card -->
                    </form>
                        <%}%>
                    <%}else{%>
                        
                        <div class="no-products">
                            
                            <h5><i class="fa fa-warning"></i>Sorry, No products found.</h5>
                            
                        </div>

                    <%}%>

